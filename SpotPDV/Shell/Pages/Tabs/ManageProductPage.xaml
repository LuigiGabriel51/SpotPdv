<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SpotPdv.Shell.Pages.ManageProductPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SpotPdv.Converters"
    xmlns:model="clr-namespace:SpotPdv.Application.Models;assembly=SpotPdv.Application"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SpotPdv.Application.ViewModels;assembly=SpotPdv.Application"
    x:DataType="viewModels:ManageProductViewModel"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:HexToBrushConverter x:Key="HexToBrushConverter" />
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
            <toolkit:IsNullConverter x:Key="IsNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:Name="rootGrid">
        <Grid
            Padding="20"
            ColumnSpacing="30"
            RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>
                <SearchBar
                    x:Name="SearchBarProducts"
                    Grid.Column="1"
                    BackgroundColor="{StaticResource Gray100}"
                    FontAttributes="Bold"
                    FontFamily="PoppinsR"
                    FontSize="18"
                    HorizontalTextAlignment="Center"
                    Placeholder="Buscar produto"
                    Text="{Binding ProductSearchText}"
                    VerticalOptions="Center" />
            </Grid>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                BackgroundColor="{StaticResource Gray100}"
                BorderColor="{StaticResource Gray200}"
                BorderWidth="1"
                Command="{Binding OpenNewCategoryCommand}"
                FontFamily="PoppinsR"
                HorizontalOptions="Start"
                Text="Adicionar categoria"
                TextColor="{StaticResource Gray900}"
                VerticalOptions="Center" />

            <Button
                Grid.Row="1"
                Grid.Column="0"
                BackgroundColor="{StaticResource Gray100}"
                BorderColor="{StaticResource Gray200}"
                BorderWidth="1"
                Command="{Binding OpenNewProductCommand}"
                FontFamily="PoppinsR"
                HorizontalOptions="Start"
                Text="Adicionar produto"
                TextColor="{StaticResource Gray900}"
                VerticalOptions="Center" />

            <toolkit:Expander Grid.Row="2" Grid.Column="0">
                <toolkit:Expander.Header>
                    <Button
                        BackgroundColor="{StaticResource Gray100}"
                        BorderColor="{StaticResource Gray200}"
                        BorderWidth="1"
                        FontFamily="AwesomeDuotone"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="&#xf1de;"
                        TextColor="{StaticResource Gray900}"
                        VerticalOptions="Start" />
                </toolkit:Expander.Header>
                <Border
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Padding="5,5,5,5"
                    BackgroundColor="White"
                    HorizontalOptions="Fill"
                    Stroke="{StaticResource Gray400}"
                    StrokeShape="RoundRectangle 5"
                    VerticalOptions="Fill">
                    <VerticalStackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="1"
                                FontFamily="PoppinsL"
                                FontSize="12"
                                HorizontalOptions="Start"
                                Text="Organizar de A à Z"
                                VerticalOptions="Center" />
                            <CheckBox Margin="0,0,-10,0" VerticalOptions="Center" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="1"
                                FontFamily="PoppinsL"
                                FontSize="12"
                                HorizontalOptions="Start"
                                Text="Exigir confirmação?"
                                VerticalOptions="Center" />
                            <CheckBox Margin="0,0,-10,0" VerticalOptions="Center" />
                        </Grid>
                        <RadioButton
                            Content="Pesquisa por nome"
                            FontSize="12"
                            GroupName="search" />
                        <RadioButton
                            Content="Pesquisa por código"
                            FontSize="12"
                            GroupName="search" />
                    </VerticalStackLayout>
                </Border>
            </toolkit:Expander>

            <CollectionView
                x:Name="Products"
                Grid.Row="2"
                Grid.Column="1"
                ItemsSource="{Binding ConteinerView}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        HorizontalItemSpacing="20"
                        Orientation="Vertical"
                        Span="4"
                        VerticalItemSpacing="20" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:DataContainer">
                        <Border
                            Grid.Column="1"
                            BackgroundColor="{Binding Category.Color.Color}"
                            HeightRequest="60"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Stroke="Transparent">
                                    <Grid>
                                        <Image
                                            Margin="0,10,0,10"
                                            HorizontalOptions="Center"
                                            IsVisible="{Binding Category.IconChoose, Converter={StaticResource InvertedBoolConverter}}"
                                            Source="{Binding Category.Image.Image, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                            VerticalOptions="Center"
                                            WidthRequest="50" />
                                        <Label
                                            Padding="20,0,20,0"
                                            FontFamily="AwesomeDuotone"
                                            FontSize="30"
                                            HorizontalOptions="Center"
                                            IsVisible="{Binding Category.IconChoose}"
                                            Text="{Binding Category.Icon}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Border>
                                <Label
                                    Grid.Column="1"
                                    FontFamily="PoppinsL"
                                    HorizontalOptions="Start"
                                    HorizontalTextAlignment="Start"
                                    Text="{Binding Category.Name}"
                                    VerticalOptions="Center" />
                                <Button
                                    Grid.ColumnSpan="3"
                                    Padding="10,0,10,0"
                                    BackgroundColor="Transparent"
                                    Command="{Binding BindingContext.OpenCurrentProductCommand, Source={x:Reference Products}}"
                                    CommandParameter="{Binding .}"
                                    HorizontalOptions="Fill"
                                    VerticalOptions="Fill" />

                                <Button
                                    Grid.Column="2"
                                    Padding="1"
                                    BackgroundColor="Transparent"
                                    Command="{Binding BindingContext.OpenEditCategoryCommand, Source={x:Reference Products}}"
                                    CommandParameter="{Binding .}"
                                    FontFamily="AwesomeDuotone"
                                    FontSize="30"
                                    HorizontalOptions="Fill"
                                    Text="&#xe20e;"
                                    TextColor="Black"
                                    VerticalOptions="Fill" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Grid
                Grid.Row="2"
                Grid.RowSpan="3"
                Grid.Column="1"
                IsVisible="{Binding FilterProducts}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Column="1"
                    Stroke="{StaticResource Gray600}"
                    StrokeShape="RoundRectangle 8">
                    <Grid>
                        <Grid BackgroundColor="White" Opacity=".8" />
                        <CollectionView
                            x:Name="GridProductsFiltered"
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,0"
                            ItemsSource="{Binding ProductsFiltered}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    HorizontalItemSpacing="20"
                                    Orientation="Vertical"
                                    Span="3"
                                    VerticalItemSpacing="20" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:Product">
                                    <Grid MaximumWidthRequest="200">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height=".2*" />
                                        </Grid.RowDefinitions>
                                        <Border
                                            BackgroundColor="{Binding Color.Color}"
                                            HeightRequest="100"
                                            StrokeShape="RoundRectangle 6"
                                            StrokeThickness="1">
                                            <Grid>
                                                <Image
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,0"
                                                    HorizontalOptions="Center"
                                                    Source="{Binding Image.Image, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                                    VerticalOptions="Center" />
                                                <Grid BackgroundColor="Black" Opacity=".5" />

                                                <Label
                                                    Grid.Row="1"
                                                    FontFamily="PoppinsL"
                                                    HorizontalOptions="Center"
                                                    HorizontalTextAlignment="Justify"
                                                    LineBreakMode="WordWrap"
                                                    MaxLines="4"
                                                    Text="{Binding ReducedName}"
                                                    TextColor="White"
                                                    VerticalOptions="Center">
                                                    <Label.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding ReducedName, TargetNullValue=''}"
                                                            TargetType="Label"
                                                            Value="">
                                                            <Setter Property="Text" Value="{Binding Name}" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                            </Grid>
                                        </Border>
                                        <Label
                                            Grid.Row="1"
                                            FontFamily="PoppinsR"
                                            HorizontalOptions="Center"
                                            Text="{Binding Price, StringFormat='R$ {0:N2}'}" />
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.OpenEditProductCommand, Source={x:Reference GridProductsFiltered}}" CommandParameter="{Binding .}" />
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Border>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CloseFilterCommand}" />
                </Grid.GestureRecognizers>
            </Grid>

        </Grid>
        <Grid IsVisible="{Binding CardNewProduct}">
            <Grid BackgroundColor="Black" Opacity=".7">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenNewProductCommand}" />
                </Grid.GestureRecognizers>
            </Grid>
            <Border
                Margin="60"
                BackgroundColor="White"
                IsVisible="{Binding ModeProductSelected, Converter={StaticResource InvertedBoolConverter}}"
                Stroke="ForestGreen"
                StrokeShape="RoundRectangle 6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".2*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Nova Categoria"
                        VerticalOptions="Center" />
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Padding="10" Spacing="10">
                            <Grid ColumnSpacing="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border StrokeShape="RoundRectangle 6" VerticalOptions="Start">
                                    <Entry Placeholder="Nome" Text="{Binding NameCategory}" />
                                </Border>
                                <toolkit:Expander Grid.Column="1" IsExpanded="{Binding ExpaderVisible}">
                                    <toolkit:Expander.Header>
                                        <VerticalStackLayout>
                                            <Label
                                                FontFamily="AwesomeDuotone"
                                                FontSize="22"
                                                HorizontalOptions="Center"
                                                Text="&#xf339;" />
                                            <HorizontalStackLayout Spacing="20">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="11"
                                                    HorizontalOptions="Center"
                                                    Text="Cor de fundo"
                                                    VerticalOptions="Center" />
                                                <Border
                                                    BackgroundColor="{Binding ColorCategorySelected.Color}"
                                                    HeightRequest="20"
                                                    VerticalOptions="Center"
                                                    WidthRequest="20">
                                                    <Border.StrokeShape>
                                                        <Ellipse />
                                                    </Border.StrokeShape>
                                                </Border>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </toolkit:Expander.Header>
                                    <ScrollView
                                        Padding="10"
                                        HeightRequest="150"
                                        HorizontalOptions="Center">
                                        <CollectionView
                                            ItemsSource="{Binding BackgroundCategory}"
                                            SelectedItem="{Binding ColorCategorySelected}"
                                            SelectionChanged="CollectionView_SelectionChanged"
                                            SelectionMode="Single">
                                            <CollectionView.ItemsLayout>
                                                <LinearItemsLayout ItemSpacing="8" Orientation="Vertical" />
                                            </CollectionView.ItemsLayout>
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate x:DataType="model:BackgroundCategoryModel">
                                                    <Border
                                                        BackgroundColor="{Binding Color}"
                                                        HeightRequest="20"
                                                        WidthRequest="20">
                                                        <Border.StrokeShape>
                                                            <Ellipse />
                                                        </Border.StrokeShape>
                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </ScrollView>
                                </toolkit:Expander>
                            </Grid>
                            <Label FontSize="11" Text="Selecione ou faça o upload de uma imagem (Opcional)" />
                            <Grid ColumnSpacing="30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <CollectionView
                                    x:Name="collectionIcons"
                                    HorizontalScrollBarVisibility="Never"
                                    ItemsSource="{Binding FoodIconCodes}"
                                    SelectedItem="{Binding IconSelected}"
                                    SelectionMode="Single">
                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout HorizontalItemSpacing="5" Orientation="Horizontal" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="sys:String">
                                            <Border
                                                Padding="1"
                                                HeightRequest="60"
                                                StrokeShape="RoundRectangle 6"
                                                WidthRequest="60">
                                                <Grid Padding="1">
                                                    <Border
                                                        BackgroundColor="White"
                                                        Stroke="Transparent"
                                                        StrokeShape="RoundRectangle 6">
                                                        <Label
                                                            FontFamily="AwesomeDuotone"
                                                            FontSize="20"
                                                            HorizontalOptions="Center"
                                                            Text="{Binding .}"
                                                            TextColor="Black"
                                                            VerticalOptions="Center" />
                                                    </Border>
                                                </Grid>
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal">
                                                            <VisualState.Setters>
                                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                        <VisualState x:Name="Selected">
                                                            <VisualState.Setters>
                                                                <Setter Property="BackgroundColor" Value="#512BD4" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                                <Button
                                    Grid.Column="1"
                                    Padding="22,0,22,0"
                                    Command="{Binding OpenFileCommand}"
                                    CornerRadius="6"
                                    FontAttributes="Bold"
                                    FontFamily="AwesomeDuotone"
                                    FontSize="20"
                                    Text="&#x10e054;" />
                                <Image
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,10,0,0"
                                    HorizontalOptions="Center"
                                    Source="{Binding ImageSelected.Image, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                    VerticalOptions="Center"
                                    WidthRequest="50" />
                            </Grid>
                        </VerticalStackLayout>
                    </ScrollView>
                    <Button
                        Grid.Row="2"
                        Margin="50,20,50,20"
                        Command="{Binding AddNewCategoryCommand}"
                        FontAttributes="Bold"
                        Text="Criar categoria" />
                </Grid>
            </Border>
            <Border
                Margin="60"
                BackgroundColor="White"
                IsVisible="{Binding ModeProductSelected}"
                Stroke="ForestGreen"
                StrokeShape="RoundRectangle 6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".2*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Novo produto"
                        VerticalOptions="Center" />
                    <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Always">
                        <VerticalStackLayout Padding="10" Spacing="10">
                            <Grid ColumnSpacing="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Column="0"
                                    FontSize="11"
                                    Text="Nome*" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="11"
                                    Text="Nome reduzido" />
                            </Grid>
                            <Grid ColumnSpacing="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Grid.Column="0"
                                    StrokeShape="RoundRectangle 6"
                                    VerticalOptions="Start">
                                    <Entry Placeholder="Nome" Text="{Binding NameProduct}" />
                                </Border>
                                <Border
                                    Grid.Column="1"
                                    StrokeShape="RoundRectangle 6"
                                    VerticalOptions="Start">
                                    <Entry Placeholder="Nome reduzido" Text="{Binding ReducedNameProduct}" />
                                </Border>
                            </Grid>
                            <Label
                                Grid.Column="0"
                                FontSize="11"
                                Text="Informações adicionais" />
                            <Border
                                Grid.Column="1"
                                StrokeShape="RoundRectangle 6"
                                VerticalOptions="Start">
                                <Editor Placeholder="Informações adicionais" Text="{Binding ProductDetails}" />
                            </Border>
                            <Grid ColumnSpacing="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Column="0"
                                    FontSize="11"
                                    Text="Categoria*" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="11"
                                    Text="Unidade*" />
                            </Grid>
                            <Grid ColumnSpacing="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <toolkit:Expander IsExpanded="{Binding ExpanderVisible}">
                                    <toolkit:Expander.Header>
                                        <Border HeightRequest="45" StrokeShape="RoundRectangle 6">
                                            <Grid VerticalOptions="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Label
                                                    Padding="10,0,0,0"
                                                    FontAttributes="Bold"
                                                    FontSize="11"
                                                    HorizontalOptions="Start"
                                                    Text="Selecione uma categoria"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    Grid.Column="1"
                                                    Padding="10,0,10,0"
                                                    FontFamily="AwesomeDuotone"
                                                    FontSize="10"
                                                    HorizontalOptions="Center"
                                                    Text="&#xf078;"
                                                    VerticalOptions="Center" />
                                            </Grid>
                                        </Border>
                                    </toolkit:Expander.Header>
                                    <ScrollView
                                        Padding="10"
                                        HeightRequest="150"
                                        HorizontalOptions="Center">
                                        <CollectionView
                                            ItemsSource="{Binding Categories}"
                                            SelectedItem="{Binding CategorySelected}"
                                            SelectionChanged="CollectionView_SelectionChanged"
                                            SelectionMode="Single">
                                            <CollectionView.ItemsLayout>
                                                <LinearItemsLayout ItemSpacing="8" Orientation="Vertical" />
                                            </CollectionView.ItemsLayout>
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate x:DataType="model:Category">
                                                    <Border Padding="1" StrokeShape="RoundRectangle 6">
                                                        <Border
                                                            Padding="5"
                                                            BackgroundColor="White"
                                                            Stroke="Transparent"
                                                            StrokeShape="RoundRectangle 6">
                                                            <Label Text="{Binding Name}" TextColor="{Binding Color.Color}" />
                                                        </Border>
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup x:Name="CommonStates">
                                                                <VisualState x:Name="Normal">
                                                                    <VisualState.Setters>
                                                                        <Setter Property="BackgroundColor" Value="Transparent" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                                <VisualState x:Name="Selected">
                                                                    <VisualState.Setters>
                                                                        <Setter Property="BackgroundColor" Value="#512BD4" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </ScrollView>
                                </toolkit:Expander>

                                <Picker
                                    Grid.Column="1"
                                    HeightRequest="40"
                                    ItemsSource="{Binding Units}"
                                    SelectedItem="{Binding UnitSelected}"
                                    VerticalOptions="Start" />
                            </Grid>
                            <Label
                                Grid.Column="0"
                                FontSize="11"
                                Text="Código de barras (opcional)" />
                            <Grid ColumnSpacing="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Grid.Column="0"
                                    StrokeShape="RoundRectangle 6"
                                    VerticalOptions="Start">
                                    <Entry Placeholder="Código de barras" Text="{Binding BarCode}" />
                                </Border>
                                <Button
                                    Grid.Column="1"
                                    CornerRadius="6"
                                    FontAttributes="Bold"
                                    FontFamily="AwesomeDuotone"
                                    FontSize="20"
                                    IsEnabled="False"
                                    Text="&#xf464;"
                                    TextColor="White" />
                            </Grid>
                            <Grid ColumnSpacing="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Column="0"
                                    FontSize="11"
                                    Text="Preço*" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="11"
                                    Text="Desconto (%)" />
                            </Grid>
                            <Grid ColumnSpacing="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Grid.Column="0"
                                    StrokeShape="RoundRectangle 6"
                                    VerticalOptions="Start">
                                    <Entry
                                        Keyboard="Numeric"
                                        Placeholder="Preço R$"
                                        Text="{Binding ProductPrice}" />
                                </Border>
                                <Border
                                    Grid.Column="1"
                                    StrokeShape="RoundRectangle 6"
                                    VerticalOptions="Start">
                                    <Entry Placeholder="Desconto %" Text="{Binding ProductDiscount}" />
                                </Border>
                            </Grid>
                            <Grid ColumnSpacing="20" RowSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Column="0"
                                    FontSize="11"
                                    Text="Qtde. no estoque" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="11"
                                    Text="Ativo" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="11"
                                    Text="Imagem" />

                                <Border
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    StrokeShape="RoundRectangle 6"
                                    VerticalOptions="Start">
                                    <Entry
                                        Keyboard="Numeric"
                                        Placeholder="Qtde."
                                        Text="{Binding QtdStock}" />
                                </Border>
                                <Switch
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    IsToggled="{Binding IsAvailable}" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Padding="22,0,22,0"
                                    Command="{Binding OpenFileCommand}"
                                    CornerRadius="6"
                                    FontAttributes="Bold"
                                    FontFamily="AwesomeDuotone"
                                    FontSize="20"
                                    Text="&#x10e054;" />
                                <Image
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="0,10,0,0"
                                    HorizontalOptions="Center"
                                    Source="{Binding ProductImageSelected.Image, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                    VerticalOptions="Center"
                                    WidthRequest="50" />
                            </Grid>
                        </VerticalStackLayout>
                    </ScrollView>
                    <Button
                        Grid.Row="2"
                        Margin="50,20,50,20"
                        Command="{Binding AddNewProductCommand}"
                        FontAttributes="Bold"
                        Text="Criar produto" />
                </Grid>
            </Border>
        </Grid>
        <Grid IsVisible="{Binding CurrentProductsOpened}">
            <Grid BackgroundColor="Black" Opacity=".60">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenCurrentProductCommand}" />
                </Grid.GestureRecognizers>
            </Grid>
            <Border
                Margin="70"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 6">
                <VerticalStackLayout>
                    <Label
                        Margin="0,0,0,0"
                        FontAttributes="Bold"
                        FontFamily="PoppinsR"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="{Binding TitleCurrentCategoryOpened}"
                        TextColor="Black"
                        VerticalOptions="Center" />
                    <Grid>
                        <CollectionView
                            x:Name="GridProducts"
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="0,20,0,0"
                            ItemsSource="{Binding Products}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    HorizontalItemSpacing="20"
                                    Orientation="Vertical"
                                    Span="4"
                                    VerticalItemSpacing="20" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:Product">
                                    <Grid MaximumWidthRequest="200">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height=".2*" />
                                        </Grid.RowDefinitions>
                                        <Border
                                            BackgroundColor="{Binding Color.Color}"
                                            HeightRequest="100"
                                            StrokeShape="RoundRectangle 6"
                                            StrokeThickness="1">
                                            <Grid>
                                                <Image
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,0"
                                                    HorizontalOptions="Center"
                                                    Source="{Binding Image.Image, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                                    VerticalOptions="Center" />
                                                <Grid BackgroundColor="Black" Opacity=".5" />

                                                <Label
                                                    Grid.Row="1"
                                                    FontFamily="PoppinsL"
                                                    HorizontalOptions="Center"
                                                    HorizontalTextAlignment="Justify"
                                                    LineBreakMode="WordWrap"
                                                    MaxLines="4"
                                                    Text="{Binding ReducedName}"
                                                    TextColor="White"
                                                    VerticalOptions="Center">
                                                    <Label.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding ReducedName, TargetNullValue=''}"
                                                            TargetType="Label"
                                                            Value="">
                                                            <Setter Property="Text" Value="{Binding Name}" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                            </Grid>
                                        </Border>
                                        <Label
                                            Grid.Row="1"
                                            FontFamily="PoppinsR"
                                            HorizontalOptions="Center"
                                            Text="{Binding Price, StringFormat='R$ {0:N2}'}" />
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.OpenEditProductCommand, Source={x:Reference GridProducts}}" CommandParameter="{Binding .}" />
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Label
                            Margin="0,100,0,0"
                            FontAttributes="Bold"
                            FontFamily="PoppinsR"
                            FontSize="16"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            IsVisible="False"
                            Text="Sem produtos castrados nessa categoria!"
                            TextColor="Black"
                            VerticalOptions="Center"
                            VerticalTextAlignment="Center">
                            <Label.Triggers>
                                <DataTrigger
                                    Binding="{Binding Products.Count}"
                                    TargetType="Label"
                                    Value="0">
                                    <Setter Property="IsVisible" Value="True" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Grid>
        <Grid IsVisible="{Binding VisibleCategoryEdit}">
            <Grid BackgroundColor="Black" Opacity=".60">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenEditCategoryCommand}" />
                </Grid.GestureRecognizers>
            </Grid>
            <Border
                Margin="40,20,40,20"
                BackgroundColor="White"
                HorizontalOptions="Center"
                StrokeShape="RoundRectangle 6"
                VerticalOptions="Center">
                <ScrollView>
                    <VerticalStackLayout Padding="20">
                        <Label
                            Margin="20,0,0,20"
                            FontAttributes="Bold"
                            FontFamily="PoppinsR"
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="Edição de categoria"
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Grid ColumnSpacing="30" RowSpacing="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Margin="0,0,0,0"
                                FontAttributes="Bold"
                                FontFamily="PoppinsL"
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="Nome da categoria ㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤ"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                FontAttributes="Bold"
                                FontFamily="PoppinsL"
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="Cor da categoria"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                FontAttributes="Bold"
                                FontFamily="PoppinsL"
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="Ícone da categoria"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Entry
                                Grid.Row="1"
                                FontSize="14"
                                HeightRequest="40"
                                Placeholder="{Binding CategoryBeingEdited.Name}"
                                Text="{Binding CategoryBeingEdited.Name}" />
                            <toolkit:Expander
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                IsExpanded="{Binding ExpanderVisible}">
                                <toolkit:Expander.Header>
                                    <Border
                                        Margin="20,0,20,0"
                                        BackgroundColor="{Binding CategoryBeingEdited.Color.Color}"
                                        HeightRequest="40"
                                        VerticalOptions="Fill"
                                        WidthRequest="40">
                                        <Border.StrokeShape>
                                            <Ellipse />
                                        </Border.StrokeShape>
                                    </Border>
                                </toolkit:Expander.Header>
                                <ScrollView HeightRequest="150" HorizontalOptions="Center">
                                    <CollectionView
                                        ItemsSource="{Binding BackgroundCategory}"
                                        SelectedItem="{Binding CategoryBeingEdited.Color}"
                                        SelectionChanged="CollectionView_SelectionChanged"
                                        SelectionMode="Single">
                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout ItemSpacing="8" Orientation="Vertical" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="model:BackgroundCategoryModel">
                                                <Border
                                                    BackgroundColor="{Binding Color}"
                                                    HeightRequest="20"
                                                    WidthRequest="20">
                                                    <Border.StrokeShape>
                                                        <Ellipse />
                                                    </Border.StrokeShape>
                                                </Border>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </ScrollView>
                            </toolkit:Expander>
                            <CollectionView
                                Grid.Row="3"
                                HorizontalOptions="Start"
                                HorizontalScrollBarVisibility="Never"
                                ItemsSource="{Binding FoodIconCodes}"
                                SelectedItem="{Binding CategoryBeingEdited.Icon}"
                                SelectionMode="Single">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout HorizontalItemSpacing="5" Orientation="Horizontal" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="sys:String">
                                        <Border
                                            Padding="1"
                                            HeightRequest="60"
                                            StrokeShape="RoundRectangle 6"
                                            WidthRequest="60">
                                            <Grid Padding="1">
                                                <Border
                                                    BackgroundColor="White"
                                                    Stroke="Transparent"
                                                    StrokeShape="RoundRectangle 6">
                                                    <Label
                                                        FontFamily="AwesomeDuotone"
                                                        FontSize="20"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding .}"
                                                        TextColor="Black"
                                                        VerticalOptions="Center" />
                                                </Border>
                                            </Grid>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor" Value="Transparent" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Selected">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor" Value="#512BD4" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Grid
                                Grid.Row="4"
                                Grid.ColumnSpan="2"
                                Margin="10"
                                ColumnSpacing="30"
                                VerticalOptions="End">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Grid.Column="0"
                                    BackgroundColor="Red"
                                    Clicked="DeleteCategoryClicked"
                                    FontFamily="PoppinsR"
                                    Text="Excluir categoria"
                                    TextColor="White" />
                                <Button
                                    Grid.Column="1"
                                    BackgroundColor="ForestGreen"
                                    Clicked="SaveCategoryClicked"
                                    FontFamily="PoppinsR"
                                    Text="Salvar categoria"
                                    TextColor="White" />
                            </Grid>
                        </Grid>
                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </Grid>
        <Grid IsVisible="{Binding VisibleProductEdit}">
            <Grid BackgroundColor="Black" Opacity=".60">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenEditProductCommand}" />
                </Grid.GestureRecognizers>
            </Grid>
            <Border
                Margin="40,20,40,20"
                BackgroundColor="White"
                HorizontalOptions="Center"
                StrokeShape="RoundRectangle 6"
                VerticalOptions="Center">
                <ScrollView>
                    <VerticalStackLayout Padding="20">
                        <Label
                            Margin="20,0,0,20"
                            FontAttributes="Bold"
                            FontFamily="PoppinsR"
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="Edição de produto"
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Grid ColumnSpacing="30" RowSpacing="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Margin="0,0,0,0"
                                FontAttributes="Bold"
                                FontFamily="PoppinsL"
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="Nome do produto ㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤㅤ"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                FontAttributes="Bold"
                                FontFamily="PoppinsL"
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="Nome reduzido"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="2"
                                Margin="0,0,0,0"
                                FontAttributes="Bold"
                                FontFamily="PoppinsL"
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="Categoria"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Entry
                                Grid.Row="1"
                                FontSize="14"
                                HeightRequest="40"
                                MaxLength="50"
                                Placeholder="{Binding ProductsBeingEdited.Name}"
                                Text="{Binding ProductsBeingEdited.Name}" />
                            <Entry
                                Grid.Row="1"
                                Grid.Column="1"
                                FontSize="14"
                                HeightRequest="40"
                                MaxLength="20"
                                Placeholder="{Binding ProductsBeingEdited.ReducedName}"
                                Text="{Binding ProductsBeingEdited.ReducedName}" />
                            <toolkit:Expander
                                Grid.Row="1"
                                Grid.RowSpan="4"
                                Grid.Column="2"
                                IsExpanded="{Binding ExpanderVisible}">
                                <toolkit:Expander.Header>
                                    <Border
                                        Padding="0"
                                        HeightRequest="45"
                                        HorizontalOptions="Fill"
                                        StrokeShape="RoundRectangle 6"
                                        VerticalOptions="Fill">
                                        <Grid VerticalOptions="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Padding="10,0,0,0"
                                                FontAttributes="Bold"
                                                FontSize="11"
                                                HorizontalOptions="Start"
                                                TextColor="{Binding CategorySelectedCategoryForProduct.Color.Color}"
                                                VerticalOptions="Center">
                                                <Label.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding CategorySelectedCategoryForProduct, Converter={StaticResource IsNullConverter}}"
                                                        TargetType="Label"
                                                        Value="True">
                                                        <Setter Property="Text" Value="Selecione uma categoria" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding CategorySelectedCategoryForProduct, Converter={StaticResource IsNullConverter}}"
                                                        TargetType="Label"
                                                        Value="False">
                                                        <Setter Property="Text" Value="{Binding CategorySelectedCategoryForProduct.Name}" />
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                            <Label
                                                Grid.Column="1"
                                                Padding="10,0,10,0"
                                                FontFamily="AwesomeDuotone"
                                                FontSize="10"
                                                HorizontalOptions="Center"
                                                Text="&#xf078;"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </Border>
                                </toolkit:Expander.Header>
                                <ScrollView
                                    Padding="10"
                                    HeightRequest="150"
                                    HorizontalOptions="Center">
                                    <CollectionView
                                        ItemsSource="{Binding Categories}"
                                        SelectedItem="{Binding CategorySelectedCategoryForProduct}"
                                        SelectionChanged="CollectionView_SelectionChanged"
                                        SelectionMode="Single">
                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout ItemSpacing="8" Orientation="Vertical" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="model:Category">
                                                <Border Padding="1" StrokeShape="RoundRectangle 6">
                                                    <Border
                                                        Padding="5"
                                                        BackgroundColor="White"
                                                        Stroke="Transparent"
                                                        StrokeShape="RoundRectangle 6">
                                                        <Label Text="{Binding Name}" TextColor="{Binding Color.Color}" />
                                                    </Border>
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal">
                                                                <VisualState.Setters>
                                                                    <Setter Property="BackgroundColor" Value="Transparent" />
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                            <VisualState x:Name="Selected">
                                                                <VisualState.Setters>
                                                                    <Setter Property="BackgroundColor" Value="#512BD4" />
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                </Border>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </ScrollView>
                            </toolkit:Expander>
                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                FontAttributes="Bold"
                                FontFamily="PoppinsL"
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="Descrição"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                FontAttributes="Bold"
                                FontFamily="PoppinsL"
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="Código de barras"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                FontAttributes="Bold"
                                FontFamily="PoppinsL"
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="Cor do produto"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Entry
                                Grid.Row="3"
                                FontSize="14"
                                HeightRequest="40"
                                MaxLength="50"
                                Placeholder="Descrição"
                                Text="{Binding ProductsBeingEdited.Description}" />
                            <Entry
                                Grid.Row="3"
                                Grid.Column="1"
                                FontSize="14"
                                HeightRequest="40"
                                MaxLength="50"
                                Placeholder="ex: 8949461894984"
                                Text="{Binding ProductsBeingEdited.Barcode}" />
                            <CollectionView
                                Grid.Row="5"
                                Grid.RowSpan="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                ItemsSource="{Binding BackgroundCategory}"
                                SelectedItem="{Binding ProductsBeingEdited.Color}"
                                SelectionChanged="CollectionView_SelectionChanged"
                                SelectionMode="Single">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout ItemSpacing="8" Orientation="Horizontal" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="model:BackgroundCategoryModel">
                                        <Border HeightRequest="33" WidthRequest="33">
                                            <Border.StrokeShape>
                                                <Ellipse />
                                            </Border.StrokeShape>
                                            <Border
                                                BackgroundColor="{Binding Color}"
                                                HeightRequest="30"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                WidthRequest="30">
                                                <Border.StrokeShape>
                                                    <Ellipse />
                                                </Border.StrokeShape>
                                            </Border>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor" Value="Transparent" />
                                                            <Setter Property="Stroke" Value="Transparent" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Selected">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor" Value="{StaticResource Black}" />
                                                            <Setter Property="Stroke" Value="{StaticResource Black}" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Grid
                                Grid.Row="7"
                                Grid.ColumnSpan="3"
                                Margin="10"
                                ColumnSpacing="30"
                                VerticalOptions="End">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Grid.Column="0"
                                    BackgroundColor="Red"
                                    Clicked="DeleteProductClicked"
                                    FontFamily="PoppinsR"
                                    Text="Excluir produto"
                                    TextColor="White" />
                                <Button
                                    Grid.Column="1"
                                    BackgroundColor="ForestGreen"
                                    Clicked="SaveProductClicked"
                                    FontFamily="PoppinsR"
                                    Text="Salvar produto"
                                    TextColor="White" />
                            </Grid>
                        </Grid>
                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </Grid>
        <Grid IsVisible="{Binding IsLoading}">
            <Grid BackgroundColor="Black" Opacity=".60" />
            <ActivityIndicator
                HorizontalOptions="Center"
                IsRunning="True"
                VerticalOptions="Center"
                Color="White" />
        </Grid>
    </Grid>
</ContentPage>